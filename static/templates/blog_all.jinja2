{% extends "templates/base.jinja2" %}

{% block body %}
    <section class="lenta">
        {% for post in posts%}
            <div class="blog-card">
                <h2 class="title">{{post.title}}</h2>
                <p class="author">{{post.author}}</p>
                <a href="{{ request.url_for('post', post_id=post.id) }}">Читать далее...</a>
            </div>
        {% endfor %}
    </section>
{% endblock %}

